@model WebApplication1.Models.Goals

@{
    ViewData["Title"] = "Edycja celu";
}

<h1>Edycja celu</h1>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="GoalType" />

    @if (Model.GoalType == 2) //Cel Schudnąć
    {
        <div class="form-group">
            <label asp-for="Mass" class="control-label">Aktualna Waga</label>
            <input asp-for="Mass" class="form-control" />
            <span asp-validation-for="Mass" class="text-danger"></span>
            <label asp-for="MassGoal" class="control-label">Docelowa Waga</label>
            <input asp-for="MassGoal" class="form-control" />
            <span asp-validation-for="MassGoal" class="text-danger"></span>
        </div>
    }

    @if (Model.GoalType == 1)  //Cel Podnieść Ciężar
    {
        <div class="form-group">
            <label asp-for="WeightGoal" class="control-label">Docelowy ciężar</label>
            <input asp-for="WeightGoal" class="form-control" />
            <span asp-validation-for="WeightGoal" class="text-danger"></span>
        </div>
    }

    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-primary" style="margin-top:10px" />
    </div>
</form>
<a asp-action="Index" style="margin-top:10px">Wróć do listy celów</a>
