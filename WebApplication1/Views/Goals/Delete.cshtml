@model WebApplication1.Models.Goals

@{
    ViewData["Title"] = "Usuwanie celu";
}

<h1>Usuwanie</h1>

<h3>Czy jesteś pewny, że chcesz usunąć ten cel?</h3>
<div>
    <h4>Goal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mass)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mass)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Usuń" class="btn btn-danger" style="margin-top:10px" />
        </div>
    </form>
    <a asp-action="Index" style="margin-top:10px">Wróć do listy celów</a>
</div>