@model WebApplication1.Models.Exercise

@{
    ViewData["Title"] = "Szczegóły";
}

<h1>Szczegóły ćwiczenia</h1>

<div>
    <h4>Ćwiczenie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reps)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reps)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Series)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Series)
        </dd>
        <dt class="col-sm-2">
            Exercise Type
        </dt>
        <dd class="col-sm-10">
            @ViewData["ExerciseTypeName"]
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SessionId)
        </dt>
        <dd class="col-sm-10">
            @ViewData["SessionName"]
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" style="margin-top:10px">Edytuj</a> |
    <a asp-action="Index" style="margin-top:10px">Wróć do listy ćwiczeń</a>
</div>
