@model WebApplication1.Models.Exercise

@{
    ViewData["Title"] = "Edycja ćwiczenia";
}

<h1>Edycja ćwiczenia</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Weight" class="control-label">Waga</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reps" class="control-label">Powtórzenia</label>
                <input asp-for="Reps" class="form-control" />
                <span asp-validation-for="Reps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Series" class="control-label">Ilość serii</label>
                <input asp-for="Series" class="form-control" />
                <span asp-validation-for="Series" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExerciseTypeId" class="control-label">Typ ćwiczenia</label>
                <select asp-for="ExerciseTypeId" class="form-control" asp-items="ViewBag.ExerciseTypes"></select>
                <span asp-validation-for="ExerciseTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SessionId" class="control-label">Sesja treningowa</label>
                <select asp-for="SessionId" class="form-control" asp-items="ViewBag.Sessions"></select>
                <span asp-validation-for="SessionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" style="margin-top:10px" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="margin-top:10px">Wróć do listy ćwiczeń</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
